{block content}
	<h1>Škola {$jmenoSkoly}</h1>
	{control schoolForm}
	<h1>Vzdělávací plány školy {$jmenoSkoly}</h1>

	<h2>Přidat vzdělávací plán</h2>
	{control planForm}

	<h2>Vzdělávací plány</h2>
	<div class="seznamOdkazu vzdelavaciPlany">
		{foreach $vzdelavaciPlany as $vzdelavaciPlan}
			<p>
				<a n:href="SVP:default svpID: $vzdelavaciPlan->svpID">{$vzdelavaciPlan->jmenoSVP}</a>
			</p>
		{/foreach}
	</div>
{/block}